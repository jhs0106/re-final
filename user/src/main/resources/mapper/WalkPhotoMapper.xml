<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.sm.app.repository.WalkPhotoMapper">

    <resultMap id="WalkPhotoResultMap" type="edu.sm.app.dto.WalkPhotoDto">
        <id     column="photo_id"          property="photoId"/>
        <result column="walking_recode_id" property="walkingRecodeId"/>
        <result column="image_path"        property="imagePath"/>
        <result column="lat"               property="lat"/>
        <result column="lng"               property="lng"/>
        <result column="created_at"        property="createdAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insert"
            parameterType="edu.sm.app.dto.WalkPhotoDto"
            useGeneratedKeys="true"
            keyProperty="photoId"
            keyColumn="photo_id">
        INSERT INTO walk_photo
        (walking_recode_id, image_path, lat, lng, created_at)
        VALUES
        (#{walkingRecodeId}, #{imagePath}, #{lat}, #{lng}, now())
    </insert>

    <select id="findByWalkId"
            parameterType="long"
            resultMap="WalkPhotoResultMap">
        SELECT
            photo_id,
            walking_recode_id,
            image_path,
            lat,
            lng,
            created_at
        FROM walk_photo
        WHERE walking_recode_id = #{walkingRecodeId}
        ORDER BY created_at ASC
    </select>

</mapper>
